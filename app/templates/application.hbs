<div class="ui container very padded text">
{{#if session.isAuthenticated}}
  {{#unless isLoginRoute}}
  <h1 class='ui header' id="title">Participate</h1>

  <div class="ui secondary  menu">
    {{#link-to 'internal.dashboard' class='item'}}Dashboard{{/link-to}}
    {{#link-to 'internal.proposals.new' class='item'}}New proposal{{/link-to}}
    {{#link-to 'internal.proposals.list' class='item'}}Current proposals{{/link-to}}
    <div class="right menu">
      <div class="ui item">
        <a class="item">Signed in as : {{model.name}}</a>
        <a {{ action 'invalidateSession' }}>Logout</a>
      </div>
    </div>
  </div>
  {{/unless}}
{{/if}}

{{#each flashMessages.queue as |flash|}}
  {{flash-message flash=flash}}
{{/each}}

{{outlet}}

</div>

